<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title for Recent Songs section -->
    <TextView
        android:id="@+id/tv_recent_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_songs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView for Recent Songs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Title for Popular Songs section -->
    <TextView
        android:id="@+id/tv_popular_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_songs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView for Popular Songs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popular_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
