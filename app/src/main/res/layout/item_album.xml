<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_album_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/album_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_album_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Album Title"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/img_album_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_album_release_date"/>

    <TextView
        android:id="@+id/tv_album_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/img_album_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_album_title"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>